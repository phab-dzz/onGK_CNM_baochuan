<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>

<body>
    <h1>Hello</h1>
    <table>
        <div class="table">
            <!-- table.ejs -->
            <table class="table" id="papers">
                <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Tên bài báo</th>
                        <th>Nhóm tác giả</th>
                        <th>Số trang</th>
                        <th>Năm xuất bản</th>
                        <th>Hình ảnh</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (papers.length) { %>
                        <% papers.forEach(function(paper) { %>
                            <tr>
                                <td>
                                    <%= paper.isbn %>
                                </td>
                                <td>
                                    <%= paper.title %>
                                </td>
                                <td>
                                    <%= paper.author %>
                                </td>
                                <td>
                                    <%= paper.page %>
                                </td>
                                <td>
                                    <%= paper.year %>
                                </td>
                                <td><img src="<%= paper.image %>" alt="image" width="100" height="100" /></td>
                                <td>
                                    <a href="/papers/<%= paper.id %>" class="btn btn-primary">Edit</a>
                                    <form action="/papers/delete/<%= paper.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td>No papers found</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </table>

    <div class="form">
        <form action="/papers" method="post" enctype="multipart/form-data">
          <div class="form-group mb-3">
            <label for="name" class="form-label">Tên bài báo</label>
            <input class="form-control" type="text" id="Name" name="Name" required />
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="type">Tên nhóm tác giả</label>
            <input class="form-control" type="text" id="Authors" name="Authors" required />
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="semester">Số trang</label>
            <input class="form-control" type="text" id="pages" name="pages" required />
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="faculty">Năm xuất bản</label>
            <input class="form-control" type="text" id="year" name="year" required />
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="image">Hình ảnh</label>
            <input class="form-control" type="file" id="img" name="img" required />
          </div>
          <button type="submit" class="btn btn-primary">Thêm bài báo</button>
        </form>
      </div>
</body>

</html>