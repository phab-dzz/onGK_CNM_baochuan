<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>Document</title>
</head>
<body>
    <div>
        <h3>Nha san xuat</h3>
        <h1 class="text-center p-3">Danh muc bai bao</h1>
        <table border="1" style="width: 100%;" class="table table-bordered">
               <tr>
                <th>STT</th>
                <th>Ten bai bao</th>
                <th>tac gia</th>
                <th>ISBN</th>
                <th>so Trang</th>
                <th>Nam Xuat Ban</th>
                <th>Hinh anh</th>
                <th>Hanh dong</th>
               </tr>
               <% if(papers){%>
                <% papers.forEach((paper,index)=>{%>
                    <tr>
                        <td><%= index+1%></td>
                        <td><%=paper.title %> </td>
                        <td><%=paper.author %></td>
                        <td><%= paper.isbn %></td>
                        <td><%= paper.page%></td>
                        <td><%= paper.year%></td>
                        <td><img src="<%=paper.image %>" width="100px" height="100px"/></td>
                        <td>
                            <form action="/delete/<%=paper.id %>" method="post" onsubmit="return confirmRemove(event,'<%=paper.title %>')">
                                <button class="btn btn-danger" type="submit">xoa</button>
                            </form>
                        </td>
                    </tr>
                    <%})} %>
                    
        </table>
    </div>
    <div class="container mt-3">
        <div class="card shadow-lg p-4">
            <h1 class="text-center">Them bai bao moi</h1>
            <form class="form" action="/add" method="post" enctype="multipart/form-data" >
                <div class="form-group mb-3">
                    <label for="title" class="form-label">Ten bai bao</label>
                    <input type="text" class="form-control" id="title" name="title" required value="UML">

                </div>
                <div class="form-group mb-3">
                    <label for="author" class="form-label">Ten tac gia</label>
                    <input type="text" class="form-control" id="author" name="author" required value="Nguyn Van A">

                </div>
                <div class="form-group mb-3">
                    <label for="isbn" class="form-label">ISBN</label>
                    <input type="text" class="form-control" id="isbn" name="isbn" required value="951-652-652">

                </div>
                <div class="form-group mb-3">
                    <label for="page" class="form-label">So trang</label>
                    <input type="number" class="form-control" id="page" name="page" required value="20">

                </div>
                <div class="form-group mb-3">
                    <label for="year" class="form-label">Nam</label>
                    <input type="number" class="form-control" id="year" name="year" required value="2020">

                </div>
                <div class="form-group mb-3">
                    <label for="image" class="form-label">Anh</label>
                    <input type="file" class="form-control" id="image" name="image" required >

                </div>

                <button type="submit" class="btn btn-primary">Them</button>

            </form>

        </div>
    </div>
    <script>
        function confirmRemove(event,title){
            const confirmA= confirm(`Ban co muon xoa "${title}" khong ?`);
            if(!confirmA){
                event.preventDefault();
            }
        }
    </script>
    
</body>
</html>